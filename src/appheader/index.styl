@require '_lib'

#appheader
	height header-height
	-webkit-app-region drag
	position absolute
	top 0
	left (300px + navbar-width)
	right 0
	z-index 0
	text-align center
	line-height 40px
	font-size 14px
	color #eee
	background #222
	padding 0 5px
	user-select none
	transition background-color .2s ease-out, color .2s ease-out
	z-index 100
	overflow hidden

	h1
		margin 0
		padding 0
		font-weight normal
		font-size inherit

	button
		float left
		font-size 22px
		line-height 34px
		margin 0
		cursor pointer
		padding 2px 10px
		text-align center
		background none
		border none
		color inherit
		transition color 0.2s ease-out, -webkit-text-stroke .2s ease-out

		&:active

		&:focus
			outline none

	.btn-right
		float right



.window-inactive #appheader
	color #666

	.star-box .btn-star
		-webkit-text-stroke 1px #666




#appheader .star-box
	float left

	.btn-star
		display block
		-webkit-text-stroke 1px #666

	.btn-unstar
		color #E73528
		display none


	&.starred
		.btn-star
			display none

		.btn-unstar
			display block





.copy-link-confirmation
	position absolute
	top 40px
	right 16px
	background rgba(0, 0, 0, 0.8)
	color #f5f5f5
	padding 0 15px
	border-radius 5px
	display none
	opacity 0

	&.flash
		display block
		animation flash 1.8s 1 ease-in-out





@keyframes flash
	0%
		opacity 0
	20%
		opacity 1
	70%
		opacity 1
	100%
		opacity 0
