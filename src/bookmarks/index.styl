@require '_lib'


.repo-box-issues
	list-style none
	margin 0
	padding 0


.repo-box
	padding 0 0 15px

	.hdr
		padding 10px 10px 12px 20px
		display block


	li
		padding 5px 20px 15px 20px
		display flex
		font-weight 300
		position relative

		a.btn
			padding 0
			font-size 14px
			flex 1


		.build-status .icon,
		i
			width 18px
			min-width 18px
			font-size 16px
			margin 0 3px 0 0


		&.unread:before
			content ''
			position absolute
			left 7px
			top 11px
			background-color unread-dot-color
			border-radius 50%
			width 5px
			height 5px
			box-shadow 0 -1px 2px rgba(0, 0, 0, 0.3) inset



.issue-box
	.issue-icon
		color #eee
		-webkit-text-stroke 0.5px #eee
		transition color .3s ease-out

	&.open .issue-icon
		color ico-col-open
		-webkit-text-stroke 0.5px ico-col-open

	&.closed .issue-icon
		color ico-col-closed
		-webkit-text-stroke 0.5px ico-col-closed

	&.merged .issue-icon
		color ico-col-merged
		-webkit-text-stroke 0.5px ico-col-merged




.build-status
	position absolute
	bottom 0
	left 41px
	right 23px
	height 10px
	padding 4px 0
	display none


	&.success
	&.merged
		color ico-col-success

	&.aborted
	&.failure
		color ico-col-failure

	&.progress
		color rgba(255, 255, 255, 0.5)

	.icon
		position absolute
		right -8px
		bottom -3px


	&.progress .icon
		animation blink 5s linear infinite


.type-pr .build-status
	display block


.build-progress
	height 1px
	border-radius 5px
	background-color #666
	width calc(100% - 20px)

.build-progress-inner
	height 100%
	background progressbar-color
	border-radius 5px
	width 0
	transition width .5s ease-out



.build-status.success
.build-status.aborted
.build-status.failure
.build-status.merged
	.build-progress-inner
		background rgba(0, 0, 0, 0.3)



@keyframes blink
	50%
		opacity 0.2
