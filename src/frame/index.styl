@require '_lib'

#frame
	position absolute
	top (header-height + addressbar-height)
	left (navbar-width + subnavbar-width)
	bottom 0
	right 0
	overflow hidden
	background-color #333

	webview
		outline none
		height 100%
		width 100%
		position relative
		transition opacity .3s ease-out


	&.loading webview
		opacity 0





/*** SKELETON LOADING *****************************************************************************/
skeleton-color = #f5f5f5
.skeleton
	position absolute
	left 0
	top 0
	bottom 0
	right 0
	padding 20px
	transition opacity .3s ease-out
	z-index -1
	opacity 0
	background-color #fff



.skeleton-header
	width 100%
	height 94px
	margin-bottom 5px
	background linear-gradient(skeleton-color 40px, transparent 0) 0 0/100% 50px repeat-y



.skeleton-sidebar
	float right
	width 200px
	height 590px
	margin 10px 0 0 20px
	display none
	background linear-gradient(skeleton-color 75px, transparent 0) 0 0/100% 85px repeat-y



.skeleton-main
	height 100%
	margin-top 15px
	width 100%
	background-repeat repeat-y
	background-image linear-gradient(skeleton-color 48px, transparent 0), linear-gradient(skeleton-color 48px, transparent 0), linear-gradient(skeleton-color 100px, transparent 0)
	background-size 48px 180px, calc(100% - 60px) 180px, calc(100% - 60px) 180px
	background-position 0 0, 60px 0, 60px 58px



.skeleton-shine
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	background-image linear-gradient(100deg, rgba(#fff, 0), rgba(#fff, 0.5) 50%, rgba(#fff, 0) 80% )
	background-repeat no-repeat
	background-size 100px 100%
	background-position 0 0




/* issue, pr, file list */
.skeleton.list
	.skeleton-main
		display none

	.skeleton-header
		height 100%



/*issue, pr */
.skeleton.timeline
	.skeleton-header
		height 94px

	.skeleton-sidebar
		display block

	.skeleton-main
		width calc(100% - 220px)


#frame.loading
	.skeleton
		z-index 10
		opacity 1

	.skeleton-shine
		animation shine 2.5s infinite



@keyframes shine
	40%
		background-position 110% 0
	100%
		background-position 110% 0



